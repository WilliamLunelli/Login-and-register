                //     // window.location.href = '/dashboard';
                // } else {
                //     // Erro no login
                //     document.getElementById('errorMsg').textContent = data.message || 'Erro ao fazer login';
                //     document.getElementById('errorMsg').style.display = 'block';
                // }
                
                // REMOVA ESTE CONSOLE.LOG QUANDO CONECTAR O BACKEND
                console.log('Login attempt:', { email, password, remember });
                
            } catch (error) {
                // Erro de rede ou servidor
                document.getElementById('errorMsg').textContent = 'Erro ao conectar com o servidor';
                document.getElementById('errorMsg').style.display = 'block';
            } finally {
                // Reseta o botão
                document.getElementById('btnText').style.display = 'inline';
                document.getElementById('loading').style.display = 'none';
            }
        });

        // Limpa mensagens quando usuário começa a digitar
        document.getElementById('email').addEventListener('input', function() {
            document.getElementById('successMsg').style.display = 'none';
            document.getElementById('errorMsg').style.display = 'none';
        });

        document.getElementById('password').addEventListener('input', function() {
            document.getElementById('successMsg').style.display = 'none';
            document.getElementById('errorMsg').style.display = 'none';
        });
    </script>
</body>
</html>